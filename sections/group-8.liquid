{{ 'component-group-8.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="group-8 group-8--{{ section.settings.content_layout }} isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless section.settings.color_scheme == section.settings.section_color_scheme and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="group-8__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} group-8__grid--reverse{% endif %}">
        <div class="group-8__media-item group-8__media-item--{{ section.settings.desktop_image_width }} group-8__media-item--{{ section.settings.desktop_content_position }} grid__item">
          <div
            class="group-8__media group-8__media--{{ section.settings.height }} global-media-settings{% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}{% if section.settings.image != blank %} media{% else %} group-8__media--placeholder placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
            {% if section.settings.height == 'adapt' and section.settings.image != blank %}
              style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
            {% endif %}
          >
            {%- if section.settings.image != blank -%}
              {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
                {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
                {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
              (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
            {%- endcapture -%}
              {%- else -%}
                {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
                {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
              (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
              {%- endif -%}
              {{
                section.settings.image
                | image_url: width: 1500
                | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
              }}
            {%- else -%}
              {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
        </div>
        <div class="group-8__text-item grid__item">
          <div
            id="ImageWithText--{{ section.id }}"
            class="group-8__content group-8__content--{{ section.settings.desktop_content_position }} group-8__content--desktop-{{ section.settings.desktop_content_alignment }} group-8__content--mobile-{{ section.settings.mobile_content_alignment }} group-8__content--{{ section.settings.height }} content-container{% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}"
          >
            {%- for block in section.blocks -%}
              {% case block.type %}
                {%- when 'heading' -%}
                  <h2
                    class="group-8__heading inline-richtext {{ block.settings.heading_size }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.heading }}
                  </h2>
                {%- when 'caption' -%}
                <div>
                    {%- if block.settings.svg_type == 'single' -%}
                    {%- if block.settings.caption_icon != blank -%}
                    {{
                        block.settings.caption_icon | image_url | img_tag: 'Describe your image', width: 100
                     }}
                    {%- endif -%}
                  <p
                    class="group-8__text group-8__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.caption | escape }}
                  </p>
                  {%- else -%}
                  {%- if block.settings.caption_icon != blank -%}
                    {{
                        block.settings.caption_icon | image_url | img_tag: 'Describe your image', width: 100
                     }}
                     {{
                        block.settings.caption_icon | image_url | img_tag: 'Describe your image', width: 100
                     }}
                     {{
                        block.settings.caption_icon | image_url | img_tag: 'Describe your image', width: 100
                     }}
                     {{
                        block.settings.caption_icon | image_url | img_tag: 'Describe your image', width: 100
                     }}
                    {{
                        block.settings.caption_icon | image_url | img_tag: 'Describe your image', width: 100
                     }}
                     {%- endif -%}
                  <p
                    class="group-8__text group-8__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.caption | escape }}
                  </p>
                  {%- endif %}
                  </div>
                {%- when 'text' -%}
                  {%- if block.settings.text_type == 'text' -%}
                  <div class="group-8__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                    {{ block.settings.text }}
                  </div>
                  {%- else -%}
                  <div>
                    <div>
                    {%- if block.settings.icon_darts != blank -%}
                    {{
                        block.settings.icon_darts | image_url | image_tag: 'Describe', width: 100
                     }}
                    {%- endif %}
                     <div class="group-8__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                        {{ block.settings.text }}
                    </div>
                    </div>
                    <div>
                    {%- if block.settings.icon_arrows != blank -%}
                    {{
                        block.settings.icon_arrows | image_url | image_tag: 'Describe', width: 100
                     }}
                     {%- endif %}
                     <div class="group-8__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                    {{ block.settings.text }}
                  </div>
                    </div>
                    <div>
                    {%- if block.settings.icon_shield != blank -%}
                    {{
                        block.settings.icon_shield | image_url | image_tag: 'Describe', width: 100
                     }}
                     {%- endif %}
                     <div class="group-8__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                    {{ block.settings.text }}
                  </div>
                    </div>
                  </div>
                  {%- endif -%}
                {%- when 'button' -%}
                  {%- if block.settings.button_label != blank -%}
                    {%- if block.settings.button_style == 'rows' -%}
                        <a
                        {% if block.settings.button_link == blank %}
                            role="link" aria-disabled="true"
                        {% else %}
                            href="{{ block.settings.button_link }}"
                        {% endif %}
                        class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                        {{ block.shopify_attributes }}
                        >
                        {{ block.settings.button_label | escape }}
                        </a>
                        <a
                        {% if block.settings.button_link_two == blank %}
                            role="link" aria-disabled="true"
                        {% else %}
                            href="{{ block.settings.button_link_two }}"
                        {% endif %}
                        class="button{% if block.settings.button_style_secondary_two %} button--secondary{% else %} button--primary{% endif %}"
                        {{ block.shopify_attributes }}
                        >
                        {{ block.settings.button_label_two | escape }}
                        </a>
                    {%- else -%}
                    <div>
                        <a
                        {% if block.settings.button_link == blank %}
                            role="link" aria-disabled="true"
                        {% else %}
                            href="{{ block.settings.button_link }}"
                        {% endif %}
                        class="button{% if block.settings.button_style_secondary %} button--secondary ml-1{% else %} button--primary{% endif %}"
                        {{ block.shopify_attributes }}
                        >
                        {{ block.settings.button_label | escape }}
                        </a>
                        <a
                        {% if block.settings.button_link_two == blank %}
                            role="link" aria-disabled="true"
                        {% else %}
                            href="{{ block.settings.button_link_two }}"
                        {% endif %}
                        class="button{% if block.settings.button_style_secondary_two %} button--secondary{% else %} button--primary{% endif %}"
                        {{ block.shopify_attributes }}
                        >
                        {{ block.settings.button_label_two | escape }}
                        </a>
                    </div>
                    {%- endif -%}
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

